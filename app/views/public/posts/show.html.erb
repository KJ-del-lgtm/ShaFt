<div class="container mt-5">
  <h2>投稿詳細</h2>
  <div class="row">
    <!-- 左側：投稿内容 -->
    <div class="col-md-6">
      <div class="memo-show p-4">
        <div class="show-body mb-4">
          <h4 class="title-head text-danger">ユーザー名</h4>
          <%= link_to (@post.user) do %>
            <h5 class="card-title"><%= @post.user.name %></h5>
          <% end %>
        </div>
        <div class="show-body bg-white p-3 rounded" style="opacity: 60%;">
          <h6 class="body-header text-danger">内容</h6>
          <p class="card-text"><%= @post.content %></p>
        </div>
      </div>

      <div class="d-flex flex-column mt-5">
        <%= link_to posts_path, class:"btn-custom d-flex align-items-center justify-content-center" do  %>
          <i class="fa-solid fa-file fa-2x my-2"></i>一覧に戻る
        <% end %>
        <% if @post.user == current_user %>
          <%= link_to edit_post_path(@post), class:"btn-custom d-flex align-items-center justify-content-center" do %>
            <i class="fa-solid fa-file-pen fa-2x my-2"></i>編集
          <% end %>
          <%= link_to @post, method: :delete, data: { confirm: "削除しますか？" }, class:"btn-custom d-flex align-items-center justify-content-center" do %>
            <i class="fa-solid fa-trash fa-2x me-2 my-2"></i>削除
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- 右側：コメント -->
    <div class="col-md-6">
      <div class="comments bg-light p-3 rounded">
        <h4>コメント一覧</h4>
        <% @post.comments.each do |comment| %>
          <div class="d-flex align-items-center mb-2 gap-3">
            <div>
              <%= image_tag comment.user.get_profile_image, size: "50x50", class: "rounded-circle" %><br>
              <%= link_to comment.user.name, user_path(comment.user) %>
            </div>
            <div class="flex-grow-1">
              <%= comment.content %>
            </div>
            <div class="text-muted small">
              <%= comment.created_at.strftime("%Y-%m-%d %H:%M") %>
            </div>
            <% if comment.user == current_user %>
              <div>
                <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete, data: { confirm: "削除してもよろしいですか？" }, class: "text-danger small" %>
              </div>
            <% end %>
          </div>
        <% end %>

        <h5 class="mt-4">コメント投稿</h5>
        <%= form_with(model: [@post, @comment], local: false) do |f| %>
          <div class="mb-2">
            <%= f.text_area :content, rows: 3, class: "form-control", placeholder: "コメントを入力..." %>
          </div>
          <div>
            <%= f.submit "投稿", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>