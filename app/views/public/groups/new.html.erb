<h2 class="mb-4 text-center">グループ作成</h2>

<div class="card shadow-sm p-4 mx-auto" style="max-width: 600px;">
  <%= form_with model: @group, local: true do |f| %>
    
    <div class="mb-3">
      <%= f.label :name, "グループ名", class: "form-label fw-bold" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :user_ids, "招待するユーザー（相互フォローのみ）", class: "form-label fw-bold" %>
      <% current_user.followings.each do |user| %>
        <% if current_user.matual_following?(user) %>
          <div class="form-check">
            <%= check_box_tag "group[user_ids][]", user.id, false, id: "user_#{user.id}", class: "form-check-input" %>
            <%= label_tag "user_#{user.id}", user.name, class: "form-check-label" %>
          </div>
        <% end %>
      <% end %>
    </div>

    <%= f.submit "作成", class: "btn btn-primary w-100 mt-3" %>
  <% end %>
</div>
