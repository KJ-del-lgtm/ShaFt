<div class="containerm my-5">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-8 col-lg-6">
      <h2 class="mb-4">新規会員登録</h2>
      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
        <%= render "publics/shared/error_messages", resource: resource %>
      
        <div class="mb-3 row">
          <label class="col-sm-3 col-form-label">ユーザーネーム</label>
            <div class="col-sm-4">
              <%= f.text_field :name, class:"form-control", placeholder: "シフトさん" %>
            </div>
        </div>

        <div class="mb-3 row">
          <label class="col-sm-3 col-form-label">メールアドレス</label>
          <div class="col-sm-9">
            <%= f.email_field :email, class: "form-control", placeholder: "example@example.com" %>
          </div>
        </div>

        <div class="mb-3 row">
          <label class="col-sm-3 col-form-label">パスワード</label>
          <div class="col-sm-9">
            <% if @minimum_password_length %>
              <small class="text-muted">（<%= @minimum_password_length %>文字以上）</small>
            <% end %>
            <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
          </div>
        </div>

        <div class="mb-4 row">
          <label class="col-sm-3 col-form-label">再度パスワード</label>
          <div class="col-sm-9">
            <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
          </div>
        </div>
      
        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-primary px-5" %>
        </div>
      <% end %>

      <div class="text-center mt-4">
        <p>すでにログイン済みの方は
          <%= link_to "こちらからログイン", new_user_session_path, class: "text-decoration-underline" %>
        </p>
      </div> 
    </div>
  </div>
</div>
