<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-8 col-lg-6">
      <h2 class="mb-4 text-center">ログイン（会員用）</h2>

      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        
        <div class="mb-3 row">
          <label class="col-sm-3 col-form-label" for="user_name">ユーザー名</label>
          <div class="col-sm-9">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", id: "user_name" %>
          </div>
        </div>

        <div class="mb-3 row">
          <label class="col-sm-3 col-form-label" for="user_password">パスワード</label>
          <div class="col-sm-9">
            <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "user_password" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="mb-3 row align-items-center">
            <div class="offset-sm-3 col-sm-9">
              <div class="form-check">
                <%= f.check_box :remember_me, class: "form-check-input", id: "remember_me" %>
                <%= f.label :remember_me, class: "form-check-label", for: "remember_me" %>
              </div>
            </div>
          </div>
        <% end %>

        <div class="text-center mt-4">
          <%= f.submit "ログイン", class: "btn btn-primary px-5" %>
        </div>

      <% end %>

      <div class="text-center mt-4">
        <p>未登録の方は
          <%= link_to "こちらから新規登録", new_user_registration_path, class: "text-decoration-underline" %>
        </p>
      </div>
    </div>
  </div>
</div>

