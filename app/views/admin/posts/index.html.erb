<h2>ユーザー一覧</h2>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>名前</th>
      <th>内容</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= link_to post.user.name ,admin_user_path(post.user)%></td>
       <td><%= link_to post.content, admin_post_path(post) %></td>
       <td><%= link_to "削除", admin_post_path(post), method: :delete, class:"btn btn-danger", data: { confirm: "削除しますか？" }%></td>
      </tr>
    <% end %>
  </tbody>
</table>